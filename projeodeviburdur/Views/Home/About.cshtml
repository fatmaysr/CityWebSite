@{
    ViewBag.Title = "Hakkında";
}

<div class="container mt-5 text-center">
    <div class="row justify-content-center">
        <!-- Turistik Yerler Listesi -->
        <div class="col-md-6 mb-4">
            <h2 class="text-center text-primary">Turistik Yerler</h2>
            <div class="card shadow">
                <div class="card-body">
                    <ul class="list-unstyled text-start" style="margin: 0 auto; width: fit-content; font-size: 1.2rem; text-align: left;">
                        @foreach (var yer in ViewBag.TuristikYerler as List<projeodeviburdur.Models.TuristikYerler>)
                        {
                            <li>&#8226; @yer.TuristikYerler1</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <!-- Nüfus Dağılımı Listesi -->
        <div class="col-md-8">
            <h2 class="text-center text-success">Nüfus Dağılımı (Son 3 Yıl)</h2>
            <div class="card shadow">
                <div class="card-body">
                    <ol class="list-unstyled text-start" style="margin: 0 auto; width: fit-content; font-size: 1.2rem; text-align: left;">
                        @foreach (var nufus in ViewBag.Nufus as List<projeodeviburdur.Models.Nufu>)
                        {
                            <li>&#8226; <strong>@nufus.Yil:</strong> @nufus.NufusSayisi</li>
                        }
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <!-- İlçe Tablosu -->
        <div class="col-md-10">
            <h2 class="text-center text-danger" style="font-size: 2rem;">İlçeler</h2>
            <div class="card shadow">
                <div class="card-body">
                    <table class="table table-bordered table-striped text-center">
                        <thead class="bg-warning text-dark">
                            <tr>
                                <th>İlçe Adı</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ilce in ViewBag.Ilceler as List<projeodeviburdur.Models.Ilceler>)
                            {
                                <tr>
                                    <td class="text-start" style="font-size: 1.2rem;">@ilce.IlceAdi</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<footer class="bg-dark text-center text-white py-4 mt-5">
    <p>Burdur 2024 Website. Tüm hakları saklıdır.</p>
</footer>
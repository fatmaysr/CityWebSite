@model IEnumerable<projeodeviburdur.Models.Ilceler>

@{
    ViewBag.Title = "İlçe Listeleme Sayfası";
}

<h2 class="text-center mb-4">Burdur İlçeleri Listeleme Sayfası</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-blue btn-sm mb-3">Yeni İlçe Oluştur</a>
</p>

<table class="table table-bordered table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IlceAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nufus)
            </th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IlceAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nufus)
                </td>
                <td class="text-center">
                    <!-- Butonlar için btn-group kullanıldı -->
                    <div class="btn-group" role="group" aria-label="Temel örnek">
                        <!-- Düzenle Butonu -->
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-darkblue btn-sm">Düzenle</a>

                        <!-- Detaylar Butonu -->
                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-blue btn-sm">Detaylar</a>

                        <!-- Sil Butonu -->
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-lightblue btn-sm" onclick="return confirm('Bu ilçeyi silmek istediğinizden emin misiniz?')">Sil</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

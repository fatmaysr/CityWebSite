@model IEnumerable<projeodeviburdur.Models.Nufu>

@{
    ViewBag.Title = "Nüfus Listeleme Sayfası";
}

<style>
    /* Turkuaz Buton Stilleri */
    .btn-teal {
        background-color: #20c997; /* Turkuaz/Teal */
        color: white;
    }

    .btn-lightteal {
        background-color: #63e6be; /* Açık Teal */
        color: white;
    }

    .btn-darkteal {
        background-color: #0ca678; /* Koyu Teal */
        color: white;
    }

        .btn-teal:hover,
        .btn-lightteal:hover,
        .btn-darkteal:hover {
            opacity: 0.85;
            transition: all 0.3s ease;
        }

    /* Tablo Stilleri */
    .table {
        width: 100%;
        margin: 20px 0;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 12px;
            text-align: center;
            border: 1px solid #dee2e6;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f8f9fa;
    }

    .table-hover tbody tr:hover {
        background-color: #e9ecef;
    }

    .thead-dark th {
        background-color: #343a40;
        color: white;
    }
</style>

<h2 class="text-center mb-4">Nüfus Listeleme Sayfası</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-teal btn-sm mb-3">Yeni Oluştur</a>
</p>

<table class="table table-bordered table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Yil)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NufusSayisi)
            </th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Yil)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NufusSayisi)
                </td>
                <td class="text-center">
                    <div class="btn-group" role="group">
                        <!-- Düzenle Butonu -->
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-teal btn-sm">Düzenle</a>

                        <!-- Detaylar Butonu -->
                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-lightteal btn-sm">Detaylar</a>

                        <!-- Sil Butonu -->
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-darkteal btn-sm" onclick="return confirm('Bu kaydı silmek istediğinizden emin misiniz?')">Sil</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
